<?xml version="1.0"?>
<odoo>

    <template id="report_class">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1><span t-field="o.name" /></h1>
                        <div class="row">
                            <div class="col-6">
                                <p>Tanggal Efektif: <span t-field="o.date"/></p>
                            </div>
                            <div class="col-6" >
                                <p>Penanggung Jawab: <span t-field="o.user_id"/></p>
                            </div>
                        </div>
                        <div class="row" style='margin-top: 50px;'>
                            <div class="col-xs-12">
                                <h5>Mahasiswa</h5>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.student_ids" t-as="student">
                                            <tr>
                                                <td class="text-center">
                                                    <span t-field="student.name" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="student.phone" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="student.email" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row" style='margin-top: 50px;'>
                            <div class="col-xs-12">
                                <h5>Mata Kuliah</h5>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Lecturer</th>
                                            <th>Start Hour</th>
                                            <th>End Hour</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.subject_line_ids" t-as="subject">
                                            <tr>
                                                <td class="text-center">
                                                    <span t-field="subject.subject_id" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="subject.lecturer_id" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="subject.start_hour" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="subject.end_hour" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="class_report" model="ir.actions.report">
        <field name="name">Class Report</field>
        <field name="model">class.class</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nti_training_academic.report_class</field>
        <field name="report_file">nti_training_academic.report_class</field>
        <field name="binding_model_id" ref="model_class_class" />
        <field name="binding_type">report</field>
    </record>
</odoo>