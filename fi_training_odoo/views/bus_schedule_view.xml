<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="bus_schedule_view_tree">
            <field name="name">bus.schedule.view.tree</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="schedule"/>
                    <field name="departure"/>
                    <field name="arrival"/>
                    <field name="bus_id"/>
                    <field name="route_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="bus_schedule_view_form">
            <field name="name">bus.schedule.view.form</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Schedule Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="schedule" placeholder="Schedule"/>
                                <field name="payment_method"/>
                                <field name="bus_id"/>
                                <field name="route_id"/>
                            </group>
                            <group>
                                <field name="departure" placeholder="Departure Time"/>
                                <field name="arrival" placeholder="Arrival Time"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="baggage_notebook" string="Baggage">
                                <field name="baggage_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="weight"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="passenger_notebook" string="Passenger">
                                <field name="passenger_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="weight"/>
                                        <field name="height"/>
                                        <field name="birth_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>